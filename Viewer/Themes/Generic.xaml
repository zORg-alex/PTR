                            <TextBlock><InlineUIContainer>
                                    <TextBlock Text="{Binding Login}"/>
                                </InlineUIContainer><Run Text=" "/><InlineUIContainer>
                                    <TextBlock Text="{Binding FolderAccessesCount}"/>
                                </InlineUIContainer></TextBlock>
                        </StackPanel>
                    </StackPanel>
                </HierarchicalDataTemplate>
