        </Setter>
        <Setter Property="ADFolderAccessTemplate">
            <Setter.Value>
                <HierarchicalDataTemplate DataType="{x:Type s:ADFolderAccess}" ItemsSource="{Binding SubFolderAccesses}">
                    <TextBlock>
                        <TextBlock.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Open in Folde View"
                                      Command="{Binding Commands, ConverterParameter=comShowInFolderView, Converter={StaticResource UVMCommandHostToUVMCommandConverter}}"
                                      CommandParameter="{Binding DataContext, RelativeSource={RelativeSource Self}}"/>
