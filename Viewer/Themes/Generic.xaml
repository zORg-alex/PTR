                        </TextBlock.ContextMenu>
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ADFolder.Status}" Value="False">
                                        <Setter Property="Foreground" Value="#FF616161"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style><InlineUIContainer>
					        <TextBlock Text="{Binding DisplayName}"/>
					    </InlineUIContainer><Run Text=" "/><InlineUIContainer>
					        <TextBlock Text="{Binding FileSystemRights}" FontSize="10" FontStyle="Italic"/>
					    </InlineUIContainer></TextBlock>
                </HierarchicalDataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ISDAVSUserTemplate">
            <Setter.Value>
                <HierarchicalDataTemplate DataType="{x:Type s:ISDAVSUser}" ItemsSource="{Binding IFunctionAccesses}">
                    <StackPanel>
                        <!--<Separator Margin="5"/>-->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Fill="Black" Width="32" Height="32" OpacityMask="{Binding Converter={StaticResource PathToDrawingBrushConverter}, Mode=OneWay, Source={StaticResource z.ISDAVSUser}}"/>
                            <c:ISDAVSUserControl  Grid.Column="1"/>
                        </Grid>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="IFunctionAccessTemplate">
            <Setter.Value>
                <HierarchicalDataTemplate DataType="{x:Type s:IFunctionAccess}" ItemsSource="{Binding IQuestAccesses}">
                    <Grid x:Name="FA_Header">
                        <Grid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Show in ISDAVS Function View"
                                      Command="{Binding Commands, ConverterParameter=comExpandInIFunctionView, Converter={StaticResource UVMCommandHostToUVMCommandConverter}}"
                                      CommandParameter="{Binding DataContext, RelativeSource={RelativeSource Self}}"/>
                            </ContextMenu>
                        </Grid.ContextMenu>
                        <TextBlock TextWrapping="Wrap"><InlineUIContainer>
                                <TextBlock Text="{Binding QuestAccessesCount, Mode=OneWay, StringFormat=Count \{0\}}" FontWeight="Bold"/>
                            </InlineUIContainer><Run Text=" "/><InlineUIContainer>
                                <TextBlock Text="{Binding IFunction.NameTrimmed, Mode=OneWay}" TextWrapping="Wrap"/>
                            </InlineUIContainer><LineBreak/><InlineUIContainer>
                                <TextBlock Text="{Binding IFunction.DescriptionTrimmed, Mode=OneWay}"
                                    TextWrapping="Wrap" FontStyle="Italic" Foreground="#FF424242" FontSize="11"/>
                            </InlineUIContainer></TextBlock>
                    </Grid>
                </HierarchicalDataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="IQuestAccessTemplate">
            <Setter.Value>
                <HierarchicalDataTemplate DataType="{x:Type s:IQuestAccess}">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Show in ISDAVS Function View"
                                      Command="{Binding Commands, ConverterParameter=comExpandInIFunctionView, Converter={StaticResource UVMCommandHostToUVMCommandConverter}}"
                                      CommandParameter="{Binding DataContext, RelativeSource={RelativeSource Self}}"/>
                            </ContextMenu>
                        </StackPanel.ContextMenu>
                        <TextBlock Text="{Binding IQuest.Name}" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding IQuest.Index, StringFormat=' \{0\}'}" TextWrapping="Wrap" Grid.Column="1"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style TargetType="{x:Type c:CommonEmploeeControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <StackPanel>
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Left" HorizontalAlignment="Left" Margin="4"><InlineUIContainer>
                                    <TextBlock Text="{Binding FullName}"/>
                                </InlineUIContainer><Run Text=" "/><InlineUIContainer>
                                <TextBlock Text="{Binding Login, StringFormat=' \{0\}'}" FontWeight="Bold"/>
                            </InlineUIContainer></TextBlock>
                            <TextBlock DockPanel.Dock="Right" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="4"><InlineUIContainer>
                                    <TextBlock Text="{Binding Status, StringFormat=Status \{0\}}"/>
                                </InlineUIContainer><Run Text=" "/><InlineUIContainer>
                                    <TextBlock Text="{Binding AdditionalData, ElementName=_this}"/>
                                </InlineUIContainer></TextBlock>
                        </DockPanel>
                        <WrapPanel>
                            <StackPanel x:Name="Local_Phone" Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="4">
                                <!--<Rectangle Fill="{DynamicResource i2_Phone}" Width="16"/>-->
                                <TextBlock Text="{Binding TrimmedPhone, StringFormat=' \{0\}; '}"/>
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel.Style>
                                        <Style TargetType="{x:Type StackPanel}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding MyType}" Value="ISDAVSUser">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <!--<Rectangle Fill="{DynamicResource i2_LocalPhone}" Width="16"/>-->
                                    <TextBlock Text="{Binding TrimmedLocalPhone, StringFormat=' \{0\}; '}"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="4">
                                <!--<Rectangle Fill="{DynamicResource I2_Letter}" Width="16"/>-->
                                <TextBlock Text="{Binding TrimmedEmail, StringFormat=' \{0\};'}"/>
                            </StackPanel>
                        </WrapPanel>
                        <WrapPanel Margin="4" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                            <WrapPanel.Style>
                                <Style TargetType="{x:Type WrapPanel}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding MyType}" Value="ISDAVSUser">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </WrapPanel.Style>
                            <!--<Rectangle Fill="{DynamicResource i2_Department}" Width="16"/>-->
                            <TextBlock Text="{Binding Department, StringFormat=' \{0\}; '}"/>
                            <!--<Rectangle Fill="{DynamicResource i2_Part}" Width="16"/>-->
                            <TextBlock Text="{Binding Part, StringFormat=' \{0\}; '}"/>
                            <TextBlock Text="{Binding PVProfession.NameTrimmed, StringFormat=Profession \{0\}}" TextWrapping="Wrap"/>
                        </WrapPanel>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type c:ISDAVSUserControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type UserControl}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                        <Grid HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                            <WrapPanel x:Name="SD" Visibility="Collapsed">
                                <TextBlock Text="{Binding FullName}"/>
                                <TextBlock Text="{Binding TrimmedLogin, StringFormat=' \{0\}'}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding FunctionCount, StringFormat=' (\{0\})'}"/>
                            </WrapPanel>
                            <c:CommonEmploeeControl x:Name="FD" AdditionalData="{Binding FunctionCount, StringFormat=' (\{0\})'}"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding Extended, ElementName=this, Mode=OneWay}" Value="False">
                            <Setter Property="Visibility" TargetName="SD" Value="Visible"/>
                            <Setter Property="Visibility" TargetName="FD" Value="Collapsed"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

