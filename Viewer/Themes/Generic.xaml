                <DataTemplate DataType="{x:Type s:PVHistEmploee}">
                    <StackPanel>
                        <!--<Separator Margin="5"/>-->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Fill="Black" Width="32" Height="32"  OpacityMask="{Binding Converter={StaticResource PathToDrawingBrushConverter}, Mode=OneWay, Source={StaticResource z.HistPVUser}}"/>
