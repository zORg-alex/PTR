                <HierarchicalDataTemplate DataType="{x:Type s:DrivePermissions}" ItemsSource="{Binding RootAccesses}">
                    <TextBlock ><InlineUIContainer>
                            <Rectangle VerticalAlignment="Bottom" Height="16" Width="20" Margin="0,0,5,0" Fill="Black"/>
                        </InlineUIContainer><Run Text=" "/><InlineUIContainer>
                            <TextBlock Text="{Binding Drive.Path}"/>
                        </InlineUIContainer></TextBlock>
